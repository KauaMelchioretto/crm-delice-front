import {
  DashboardCustomerValues,
  DashboardMonthSold,
  DashboardOrderValues,
  DashboardRankValuesProducts,
  DashboardResponse,
} from "../entities/entities.ts";
import { dashboardRepository } from "../repository/DashboardRepository.ts";
import { SimpleWallet } from "../../wallet/entities/entities.ts";
import { SimplesSalesUser } from "../../user/entities/entities.ts";

class DashboardUseCase {
  DASHBOARD_UNEXPECTED_ERROR = "DASHBOARD_UNEXPECTED_ERROR";

  async getDashboardCustomer(): Promise<DashboardResponse<DashboardCustomerValues>> {
    return dashboardRepository.getDashboardCustomer();
  }

  async getDashboardOrder(): Promise<DashboardResponse<DashboardOrderValues>> {
    return dashboardRepository.getDashboardOrder();
  }

  async getDashboardRankBest(): Promise<DashboardResponse<DashboardRankValuesProducts>> {
    return dashboardRepository.getDashboardRankBest();
  }

  async getDashboardRankLess(): Promise<DashboardResponse<DashboardRankValuesProducts>> {
    return dashboardRepository.getDashboardRankLess();
  }

  async getDashboardTotalSold(): Promise<DashboardResponse<number>> {
    return dashboardRepository.getDashboardTotalSold();
  }

  async getDashboardMostWalletSold(): Promise<DashboardResponse<SimpleWallet>> {
    return dashboardRepository.getDashboardMostWalletSold();
  }

  async getDashboardMostOperatorSold(): Promise<DashboardResponse<SimplesSalesUser>> {
    return dashboardRepository.getDashboardMostOperatorSold();
  }

  async getDashboardMonthSold(): Promise<DashboardResponse<DashboardMonthSold[]>> {
    return dashboardRepository.getDashboardMonthSold();
}
}

export const dashboardUseCase = new DashboardUseCase();
